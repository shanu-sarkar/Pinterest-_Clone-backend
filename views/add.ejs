<% include ./partials/header.ejs%>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5">
  <h1 class="text-xl mt-12 text-white">Create a new post.</h1>
  <hr class="opacity-20 mt-2" />
  <form action="/createpost" method="post" class="mt-2" enctype="multipart/form-data">
    <input class="text-white block w-1/3 px-2 py-2" type="file" name="postimage" />
    <input
      class="block w-1/3 px-2 py-2 border-2 rounded-md mt-2"
      type="text"
      name="title"
      placeholder="Title"
    />
    <textarea
      rows="10"
      class="block w-1/3 px-2 py-2 border-2 rounded-md mt-2"
      type="text"
      name="description"
      placeholder="Description"
    ></textarea>
    <input
      class="text-white block w-1/3 px-2 py-2 rounded-md mt-2 bg-red-600 font-semibold"
      type="submit"
      value="Create Post"
    />
  </form>
</div>

