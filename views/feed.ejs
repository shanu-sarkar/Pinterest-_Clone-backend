<% include ./partials/header.ejs%>

<div
  class="inline-block w-full min-h-screen bg-zinc-800 px-5 py-8 mt-12 text-white"
>
  <div class="cards flex flex-wrap gap-5">
    <%posts.forEach(function(elem){ %>
    <div class="w-32">
      <div class="card w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image%>" alt="Loading...." />
      </div>
      <h5 class="text-sm mt-2"><%= elem.title%></h5>
      <h6 class="text-xs font-semibold text-zinc-400">@<%=elem.user.username %></h6>
    </div>
    <% }) %>
  </div>
</div>
<% include ./partials/footer.ejs%>
