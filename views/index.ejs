<% include ./partials/header.ejs%>

<div
  class="w-full bg-center bg-cover h-screen bg-[url('https://images.unsplash.com/photo-1541701494587-cb58502866ab?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fGFic3RyYWN0fGVufDB8fDB8fHww')] flex items-center justify-center"
>
  <div class="w-[25vw] bg-white px-20 py-10 rounded-xl">
    <img
      src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
      alt="pin logo"
      class="img1 w-[55px] flex items-center justify-center mx-auto mb-7"
    />

    <h1
      class="mb-5 text-3xl tracking-tightr leading-none text-center font-semibold text-zinc-700"
    >
      Welcome to Pinterest
    </h1>
    <form action="/login" method="post">
      <!-- <label class="text-sm text-zinc-700 px-3 shanu" for="">Username</label> -->
      <input
        class="border-2 block w-full px-3 py-2 mt-2 rounded-full"
        type="text"
        name="username"
        placeholder="username"
      />
      <!-- <label class="text-sm text-zinc-700 px-3 shanu" for="">Password</label> -->
      <input
        class="border-2 block w-full px-3 py-2 mt-2 rounded-full"
        type="password"
        name="password"
        placeholder="password"
      />

      <a class="mt-2 inline-block font-semibold text-zinc-500" href=""
        >Forget password ?</a
      >
      <input
        class="border-2 block w-full px-3 py-2 mt-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Login"
      />

      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 text-center mx-auto"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge that you've read our Privacy Policy Notice at
        collection
      </p>
    </form>
    <a class="w-full inline-block mt-7 text-sm font-semibold text-zinc-700 text-center" href="/register"
      >Dont have an account ?</a
    >
  </div>
</div>

<% include ./partials/footer.ejs%>
